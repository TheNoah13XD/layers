{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets": ["./assets"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@constants": ["./constants"],
      "@constants/*": ["./constants/*"],
      "@context": ["./context"],
      "@context/*": ["./context/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"],
      "@firebase": ["./firebase"],
    }
  }
}
